algoritmo "aula_02.2_VALORES"
var
   numero1, numero2, soma: Inteiro
inicio
      Escreva("Digite o 1º numero: ")
      Leia(numero1)
      Escreva("Digite o 2º numero: ")
      Leia(numero2)
      soma <- numero1 + numero2
      Escreva("A soma entre ", numero1, " e ", numero2, " e igual a ", soma)
fimalgoritmo